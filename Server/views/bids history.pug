doctype html
html 
    head 
        link(rel='stylesheet', href='/css/styles.css')
        title Subastas Automáticas Ponchito Bids Page
        script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js')
        script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    body 
        h1 Subastas Automáticas Ponchito
        button(onclick="move()") Current Bids
        section
            each bid in results
                div(id=bid.id)
                    p Bid: 
                    p End Date: #{bid.duration}
                    p Status: #{bid.status}
                    p Tags: #{bid.tags}
                    p Article: #{bid.article}
                    p Winner: #{bid.user}
                    p Final Price: #{bid.price}                    
                    br
        script.
            var user = "#{user}"
            function move() 
            {
                window.location.href = '/bids/'+user
            }
            
            